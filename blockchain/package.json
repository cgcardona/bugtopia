{
  "name": "bugtopia-tokenomics",
  "version": "1.0.0",
  "description": "Bugtopia evolutionary economics smart contracts and deployment infrastructure",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "setup:l1": "./scripts/setup-bugtopia-l1.sh",
    "deploy:local": "hardhat run deploy/01-deploy-l1-contracts.js --network bugtopia_local",
    "deploy:fuji": "hardhat run deploy/01-deploy-l1-contracts.js --network bugtopia_fuji",
    "deploy:mainnet": "hardhat run deploy/01-deploy-l1-contracts.js --network bugtopia_mainnet",
    "deploy:avalanche-local": "hardhat run deploy/01-deploy-l1-contracts.js --network avalanche_local",
    "deploy:avalanche-fuji": "hardhat run deploy/01-deploy-l1-contracts.js --network fuji",
    "deploy:avalanche-mainnet": "hardhat run deploy/01-deploy-l1-contracts.js --network avalanche_mainnet",
    "verify:testnet": "hardhat verify --network fuji",
    "verify:mainnet": "hardhat verify --network avalanche",
    "verify:l1": "hardhat verify --network bugtopia_local",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "gas": "hardhat test --network hardhat",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "prepare": "husky install",
    "setup": "npm run compile && npm run test",
    "analyze": "slither .",
    "l1:start": "avalanche l1 start bugtopia-l1",
    "l1:stop": "avalanche l1 stop bugtopia-l1",
    "l1:status": "avalanche l1 list",
    "l1:logs": "avalanche l1 logs bugtopia-l1",
    "l1:describe": "avalanche l1 describe bugtopia-l1"
  },
  "keywords": [
    "bugtopia",
    "nft",
    "defi",
    "evolution",
    "gaming",
    "avalanche",
    "subnet",
    "tokenomics"
  ],
  "author": "Bugtopia Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.5",
    "solhint": "^4.1.1",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "slither-analyzer": "^0.1.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "avalanche": "^3.17.0"
  },
  "lint-staged": {
    "*.sol": [
      "prettier --write",
      "solhint --fix"
    ],
    "*.js": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
